{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": false
  },
  "include": ["src/**/*"]
}
